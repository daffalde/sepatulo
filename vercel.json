{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" },
    {
      "source": "/api/:path*",
      "destination": "https://api.sandbox.midtrans.com/:path*"
    },
    {
      "source": "/api/:path*/",
      "destination": "https://api.sandbox.midtrans.com/:path*/"
    },
    {
      "source": "/app/:path*",
      "destination": "https://app.sandbox.midtrans.com/:path*"
    },
    {
      "source": "/app/:path*/",
      "destination": "https://app.sandbox.midtrans.com/:path*/"
    }
  ]
}
